<div class="spot-form">
  <%= simple_form_for(spot) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :skill_level, 
                collection: ["Easy", "Medium", "Hard", "Pro"], 
                label: "skill level", 
                required: true %>
    <%= f.input :disciplines, collection: ["Kite boating", "Kite surfing", "Land sailing", "Sailing", "Windsurfing"], label: "Disciplines", input_html: { multiple: true } %>
    <%= f.input :description %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <%= f.submit %>
  <% end %>
</div>

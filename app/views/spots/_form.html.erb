<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-6">
      <div class="spot-form">
        <%= simple_form_for(spot) do |f| %>
          <%= f.input :name %>
          <%= f.input :address %>
          <%= f.input :skill_level, 
                      collection: ["Easy", "Medium", "Hard", "Pro"], 
                      label: "skill level", 
                      required: true %>
          <%= f.input :disciplines, as: :check_boxes, collection: ["Kite boating", "Kite surfing", "Land sailing", "Sailing", "Windsurfing"], label: "Disciplines", include_blank: false, include_hidden: false %>
          <%= f.input :description %>
          <%= f.input :photos, as: :file, input_html: { multiple: true } %>
          <%= f.button :submit, class: "btn btn-danger" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

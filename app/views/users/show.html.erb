<div class="container">
  <div class="profile">

  <% unless @user.photo.attachment.nil? %>
    <%= cl_image_tag @user.photo.key, height: 300, width: 400, crop: :fill %>
  <% end %>

    <h2>My Profile</h2>
    <div class="profile-img">
      <%= cl_image_tag @user.photo.key, height: 300, width: 300, crop: :fill %>
    </div>
    <div class="profile-description-box">
        <p>Full name</p>
        <p><strong><%= @user.first_name %> <%= @user.last_name %></strong></p>
        <p>Discipline</p>
        <p><strong><%= @user.discipline %></strong></p>
        <p>Skill Level</p>
        <p><strong><%= @user.skill_level %></strong></p>
        <%= link_to "Edit profile", edit_user_registration_path, class: "btn-profile-edit" %>
    </div>
  </div>
  <div class="favourites-box">
    <h2>Saved Spots</h2>
    <% @favourites.each do |fav| %>
      <%= fav %>
    <% end %>
  </div>
</div>
